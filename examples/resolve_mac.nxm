# se ejecuta con `sudo ntxenium resolve_mac.nxm` 

new TARGET_ADDR IP
echo 'Pasa la IP objetivo: '
input TARGET_ADDR

new LOCAL_IFACE IFACE
echo 'Interfaz a operar: '
input LOCAL_IFACE

echo 'obteniendo MAC, utilize CTRL+C para abortar\n'
resolve target
echo 'la MAC de $TARGET_ADDR es $TARGET_HWADDR\n'
exit 0
